#include <stdio.h>

int main() {
    char op;
    int num1,num2;
    void add (int,int);
    void  sub (int,int);
    void multi (int,int);
    void divi (int,int);
    printf ("enter the value of op");
    scanf ("%c",&op);
    printf("enter the two operands");
    scanf("%d%d",&num1,&num2);
    switch (op)
    {
        case'+' :
           add(num1,num2);  
           break;
        case'-':
           sub(num1,num2);
           break;
        case'*':
           multi(num1,num2);
           break;
        case'/':
           divi(num1,num2);
           break;
    }
    return 0;
}
     void add(int num1,int num2)
     {
     int result;
    result =num1+num2;
    printf ("%d",result);
    }
    void sub(int num1,int num2){
    int result;
    result =num1-num2;
    printf ("%d",result);
    } 
    void multi(int num1,int num2){
    int result;
    result =num1*num2;
    printf ("%d",result);
    }
    void divi(int num1,int num2){
         
    int result;
    result =(num1/num2);
    printf ("%d",result);
    }


